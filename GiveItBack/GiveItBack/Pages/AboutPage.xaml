<UserControl x:Class="GiveItBack.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}">
        <TextBlock Margin="10" TextWrapping="Wrap" Text="{Binding Header}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Service Test" HorizontalAlignment="Left" Margin="146,398,0,0" VerticalAlignment="Top" Width="192" Command="{Binding ShowServiceTest}"/>
    </Grid>
</UserControl>