<UserControl x:Class="GiveItBack.Pages.AddMemberPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}">
        <CheckBox Content="Wybierz z kontaktów" VerticalAlignment="Top" IsChecked="{Binding AddFromContacts,Mode=TwoWay}"/>
        <TextBox x:Name="_txtName" Height="72" Margin="0,77,80,0" TextWrapping="Wrap" Text="{Binding MemberName, Mode=TwoWay}"  VerticalAlignment="Top"/>
        <ListBox Margin="12,154,12,0" ItemsSource="{Binding VisibleContacts}" SelectedIndex="{Binding SelectedContact, Mode=TwoWay}"/>
        <Button Content="->" Margin="405,77,0,0" VerticalAlignment="Top" IsEnabled="{Binding AddFromContacts}" Command="{Binding FindContactsCommand}"/>
    </Grid>

</UserControl>