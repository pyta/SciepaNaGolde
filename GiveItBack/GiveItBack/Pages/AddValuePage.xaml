<UserControl x:Class="GiveItBack.Pages.AddValuePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}">
        <TextBox Text="{Binding Value, Mode=TwoWay}" Height="72" TextWrapping="Wrap" VerticalAlignment="Top" InputScope="Number" Margin="0,144,0,0"/>
        <StackPanel Orientation="Horizontal" Height="107" VerticalAlignment="Top">
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Center" Margin="10,10,0,0" Width="355" TextAlignment="Center"/>
            <Ellipse HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100">
                <Ellipse.Fill>
                    <ImageBrush Stretch="Fill" ImageSource="{Binding Avatar}"/>
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>
        <TextBlock Margin="10,112,10,0" TextWrapping="Wrap" Text="dołożył/a się:" VerticalAlignment="Top"/>
    </Grid>

</UserControl>