<UserControl x:Class="GiveItBack.Pages.ServiceTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding Source={StaticResource Locator}, Path=ServiceTestM}"

    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <TextBlock x:Name="txtServiceStatus" Margin="204,10,64,420" TextWrapping="Wrap" Text="{Binding StatusMessage}"  Foreground="{Binding StatusColor}"/>
        <TextBlock x:Name="txtLabelStatus" HorizontalAlignment="Left" Margin="24,10,0,0" TextWrapping="Wrap" Text="Connection status:" VerticalAlignment="Top" RenderTransformOrigin="0.256,0.547"/>

    </Grid>
</UserControl>