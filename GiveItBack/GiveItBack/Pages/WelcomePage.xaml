<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:local="clr-namespace:GiveItBack.Pages" x:Class="GiveItBack.Pages.WelcomePage"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}">
        <phone:Pivot>
            <phone:PivotItem DataContext="{Binding StartModel}" Header="{Binding Header}">                    
                <ContentPresenter Content="{Binding Content}"/>
            </phone:PivotItem>
            <phone:PivotItem Header="Historia">
                <local:HistoryPage Height="Auto" Width="Auto"/>
            </phone:PivotItem>
        </phone:Pivot>
    </Grid>
</UserControl>