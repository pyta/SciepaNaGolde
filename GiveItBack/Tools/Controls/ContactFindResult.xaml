<UserControl x:Class="Tools.Controls.ContactFindResult"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="79" d:DesignWidth="480">

    <Border Background="{Binding Border}">
        <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}" Margin="5,0,0,0">        
            <Image HorizontalAlignment="Left" Margin="5,5,0,5" Width="65" Source="{Binding Avatar}"/>
            <TextBlock Margin="100,10,10,10" TextWrapping="Wrap" Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>        
        </Grid>
    </Border>

</UserControl>