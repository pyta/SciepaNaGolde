<UserControl x:Class="WezNoOddaj.Panels.FindUserInConcatsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <TextBox x:Name="txtBoxFilter" Height="72" Margin="10,87,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="txtBoxFilter_TextChanged"/>
        <TextBlock x:Name="lblSearchInfo" Margin="10,164,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" TextAlignment="Center" FontSize="18"/>
        <CheckBox x:Name="chBoxContacts" Content="Wybierz osobę ze swoich kontaktów" Margin="10,10,10,0" VerticalAlignment="Top" IsChecked="True" FontSize="20"/>

    </Grid>
</UserControl>