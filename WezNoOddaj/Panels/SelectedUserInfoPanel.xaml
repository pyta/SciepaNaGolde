<UserControl x:Class="WezNoOddaj.Panels.SelectedUserInfoPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="480" MaxHeight="200">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}" MinHeight="200">
        <TextBlock x:Name="labelUserName" Margin="195,10,10,87" TextWrapping="Wrap" Text="[Nazwa]" FontSize="24" TextAlignment="Center"/>
        <Button x:Name="btnChangeUser" Content="Zmień" Margin="0,0,10,10" Click="btnChangeUser_Click" Height="72" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="158"/>
        <Rectangle x:Name="rectColor" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="180" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="180"/>
        <Image x:Name="imgAvatar" Margin="20,20,0,0" HorizontalAlignment="Left" Width="160" Height="160" VerticalAlignment="Top"/>
    </Grid>
</UserControl>