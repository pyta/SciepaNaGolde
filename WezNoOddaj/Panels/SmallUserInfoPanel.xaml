<UserControl x:Class="WezNoOddaj.Panels.SmallUserInfoPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="75" d:DesignWidth="300">

    <Grid x:Name="LayoutRoot">
        <TextBlock x:Name="txtBoxName" Margin="75,10,10,10" TextWrapping="Wrap" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" Text="[Nazwa użytkownika]"/>
        <Rectangle x:Name="rectColor" Fill="#FFF4F4F5" Margin="5,5,0,5" Stroke="Black" HorizontalAlignment="Left" Width="65"/>
        <Image x:Name="imgAvatar" Margin="10,10,0,10" HorizontalAlignment="Left" Width="54"/>
        <Border x:Name="border" BorderBrush="Purple" BorderThickness="2" Visibility="Collapsed"/>

    </Grid>
</UserControl>