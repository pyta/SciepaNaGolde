<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Panels="clr-namespace:WezNoOddaj.Panels" x:Class="WezNoOddaj.Screens.InsertValueForSelectedUserPage"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="700" d:DesignWidth="460">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">

        <Panels:SelectedUserInfoPanel x:Name="panelUserInfo" Margin="10,10,10,0" Height="200" VerticalAlignment="Top"/>
        <TextBox x:Name="txtValue" HorizontalAlignment="Left" Height="72" Margin="10,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="440" TextAlignment="Center" InputScope="Number"/>
        <Button x:Name="btnOK" Content="OK" Margin="129,324,131,0" VerticalAlignment="Top" Height="75" Click="btnOK_Click"/>
        <Image x:Name="imgInsertValue" Margin="10,404,10,10"/>
        <TextBlock Margin="10,215,10,0" TextWrapping="Wrap" Text="Wprowadź kwotę:" VerticalAlignment="Top"/>

    </Grid>
</UserControl>