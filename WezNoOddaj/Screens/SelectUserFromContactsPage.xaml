<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Panels="clr-namespace:WezNoOddaj.Panels" x:Class="WezNoOddaj.Screens.SelectUserFromContactsPage"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="460"
    d:DesignHeight="700">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}" Margin="0,0,0,0" Width="460">
        <Panels:FindUserInConcatsPanel x:Name="panelFilterConcats" Margin="10,10,10,0" VerticalAlignment="Top" Height="200"/>
        <ListBox x:Name="listConcats" Margin="10,215,10,87" Tap="listConcats_Tap"/>
        <Button x:Name="btnSelectUser" Content="OK" Margin="130,0,130,10" Height="72" VerticalAlignment="Bottom" Click="btnSelectUser_Click"/>
    </Grid>
</UserControl>